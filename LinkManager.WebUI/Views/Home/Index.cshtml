@using System.Web.UI.WebControls
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Link Manager</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/vendors")
</head>
<body ng-app="linkModule">
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">LINK MANAGER</a>
    </div>

    <section ng-controller="linkController as ctrl">
        <div class="col-xs-8">
            <div id="summary" class="section panel panel-primary">
                @Html.Partial("LinkSummaryView")
            </div>
        </div>
        <div class="col-xs-4" ng-show="ctrl.isAddMode">
            <div id="edit" class="section panel panel-primary">
                @Html.Partial("AddLinkView")
            </div>
        </div>
    </section>

    @Scripts.Render("~/bundles/spa")
</body>
</html>