<div class="panel-heading">
    <h4 class="panel-title">{{ctrl.modalTitle}}</h4>
</div>
<div class="panel-body">
    @using (Html.BeginForm())
    {
        <div class="form-group row">
            <label for="text-input" class="col-sm-2 col-form-label">Link</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="text-input" ng-model="ctrl.linkModel.OriginalString" autocomplete="off">
            </div>
        </div>
        <div>{{ctrl.linkModel.OriginalString}}</div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6 pull-right">
                <input type="submit" value="Save" class="btn btn-primary" ng-click="ctrl.editMode(ctrl.linkModel)" ng-disabled="!ctrl.isValidLinkString()"/>
                <input type="button" value="Cancel" class="btn btn-default" ng-click="ctrl.cancelClick()"/>
            </div>
        </div>
    }
</div>